<%- include('../partials/header') %>



<div class="table-responsive">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">App Date</th>
                <th scope="col">Issuer</th>
                <th scope="col">Card Name</th>
                <th scope="col">Credit Pull</th>
                <th scope="col">Annual Fee</th>
                <th scope="col">Next Fee Date</th>
                <th scope="col">Credit Line</th>
                <th scope="col">Account Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>04/22/2022</td>
                <td>Chase</td>
                <td>Sapphire Reserve</td>
                <td>Experian Equifax</td>
                <td>$95</td>
                <td>04/22/2022</td>
                <td>$22,000</td>
                <td>
                    <select name="" id="">
                        <option value="">Table</option>
                        <option value="">Chair</option>
                        <option value="">Couch</option>
                    </select>
                </td>
            </tr>

            <% cards.forEach((card, idx) => { %> 
                <tr>
                    <th scope="row"><%= idx+1 %> </th>
                    <td><%= card.appDate.toLocaleDateString() %> </td>
                    <td><%= card.issuer %> </td>
                    <td><%= card.cardName %> </td>

                    <td>
                        <% let bureauIndex = 0 %> 
                        <% card.creditPull.forEach(pull => { %>
                            <%  let creditBureaus = ['Experian', 'Equifax', 'Transunion']%> 
                            <div><%= pull === null ? '' : creditBureaus[bureauIndex]; %> </div>
                            <% bureauIndex++ %> 
                        <% }) %> 
                    </td>
                   
                    
                    <td>$<%= card.annualFee %> </td>
                    <td><%= card.nextFeeDate.toLocaleDateString() %> </td>
                    <td>$<%= card.creditLine %> </td>
                    <td>
                        <select name="" id="">
                            <option value="">Table</option>
                            <option value="">Chair</option>
                            <option value="">Couch</option>
                        </select>
                    </td>
                </tr>

             <% }) %>    

            
