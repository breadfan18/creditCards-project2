<%- include('../partials/header') %>

<form>
    <div class="form-group">
        <label for="cardHolder">Card Holder</label>
        <select class="form-control" id="cardHolder">
            <option value="" disabled selected>Choose Cardholder</option>
            <option>Wayne Rooney</option>
            <option>Anshu Thapa</option>
            <option>Astha Thapa</option>
        </select>
    </div>
    <div class="form-group">
        <label for="issuer">Card Issuer</label>
        <select class="form-control" id="issuer">
            <option value="" disabled selected>Choose Issuer</option>
            <option>Chase</option>
            <option>American Express</option>
            <option>BarclayCard</option>
            <option>CapitalOne</option>
            <option>Citi</option>
        </select>
    </div>
    <div class="form-group">
        <label for="cardName">Card Name</label>
        <input type="email" class="form-control" id="cardName">
    </div>
    <div class="form-group">
        <label for="appDate">App Date</label>
        <input type="date" class="form-control" id="appDate">
    </div>


    <div id="creditPull">
        <label for="creditPULL">Credit Pull</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="experian">
            <label class="form-check-label" for="experian">
                Experian
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="equifax">
            <label class="form-check-label" for="equifax">
                Equifax
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="transunion">
            <label class="form-check-label" for="transunion">
                Transunion
            </label>
        </div>
    </div>


    <div class="form-group">
        <label for="nextFeeDate">Next Fee Date</label>
        <input type="date" class="form-control" id="nextFeeDate">
    </div>
    <div class="form-group">
        <label for="creditLine">Credit Line</label>
        <input type="email" class="form-control" id="creditLine">
    </div>
    <div class="form-group">
        <label for="bonusSpend">Bonus Spend</label>
        <input type="email" class="form-control" id="bonusSpend">
    </div>
    <div class="form-group">
        <label for="bonusSpendDate">Bonus Spend Date</label>
        <input type="date" class="form-control" id="bonusSpendDate">
    </div>
    <div class="form-group">
        <label for="annualFee">Annual Fee</label>
        <input type="email" class="form-control" id="annualFee">
    </div>











    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include('../partials/footer') %>